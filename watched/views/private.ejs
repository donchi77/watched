<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content="Rigamonti Andrea" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <title>Watched</title>
</head>
<body>
    <header class="p-3 bg-dark text-white sticky-top">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <span class="text-uppercase">Watched</span>
                </a>
                <div class="col-12 col-lg-auto mx-auto mb-2 justify-content-center mb-md-0">
                    <form class="d-flex input-group" action="/search" method="GET">
                        <input class="form-control" type="text" name="title" id="txt-media-name" 
                            placeholder="Search here" aria-label="Search">
                    </form>
                </div>
                <div class="text-end">
                    <div class="d-flex justify-content-start">
                        <form action="/auth/logout" method="POST">
                            <button type="submit" class="btn btn-outline-light me-2">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main class="container">
        <div class="mt-3 text-center">
            <h1 class="display-4 mb-0"> Welcome, <%= username %>!</h1>
            <p class="lead">Here you can find all your Movies and TV-Series!</p>
        </div>
        <div class="container">
            <div class="row row-cols-2">
                <% if (list1) { %>
                <span class="border-end border-4">
                    <div class="col">
                        <h3 class="mb-3">You have watched <%= count1 %> films!</h3>
                        <div class="row row-cols-5">
                        <% list1.forEach(element => { %>
                            <div class="col mb-3">
                                <a href="/film/:<%= element.id_api %>">
                                    <img class="img-fluid rounded" alt="Picture <%= element.title %>"src="<%= element.poster %>">
                                </a>
                            </div>
                        <% }); %>
                        </div>
                    </div>
                </span>
                <% } %>
                <% if (list2) { %>
                <div class="col">
                    <h3 class="mb-3">You have to watch <%= count2 %> films!</h3>
                    <div class="row row-cols-5">
                    <% list2.forEach(element => { %>
                        <div class="col">
                            <a href="/film/:<%= element.id_api %>">
                                <img class="img-fluid rounded" alt="Picture <%= element.title %>"src="<%= element.poster %>">
                            </a>
                        </div>
                    <% }); %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </main>
    <div class="d-flex justify-content-end mb-2 me-2">
        <button type="button" class="btn btn-danger" id="btn-back-to-top">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
            </svg>
        </button>
    </div>
    <script src="/javascripts/back_to_top.js"></script>
</body>
</html>